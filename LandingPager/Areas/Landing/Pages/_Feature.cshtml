@model LandingPager.Models.ViewModels.LandingFeatureViewModel

@{
    ViewData["Title"] = Model.Feature.Name;
}


<h2>@Model.Feature.Name</h2>
<p>
    @Model.Feature.Description
</p>


<section class="features">
    <div class="container text-center">

        <h4>All our features (from RCL)</h4>
        <div class="row">
            <div class="col-md-4">
                <h6>Checkout all the other cool features</h6>
                <ul>
                    @foreach (var feature in Model.Features)
                    {
                        if (feature != Model.Feature)
                        {
                            <li><a asp-action="Feature" asp-route-id="@feature.Name">@feature.Name</a></li>
                        }
                    }
                </ul>
            </div>

        </div>
    </div>
</section>